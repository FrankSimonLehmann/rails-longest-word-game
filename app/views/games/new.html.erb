<div class="container">
<h1>new game</h1>
  <div class="d-flex">
    <%@letters.each do |item| %>
    <p class="btn btn-primary mx-3"><%=item%></p>
    <%end%>
  </div>
  <form action="/score" method="post" data-turbo="false">
    <p>What is the longest word you can find?</p>
    <div class="d-flex">
      <input type="text" class="form-control" name="word" placeholder="type your word...">
      <input type="submit" class="btn btn-primary mx-3">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
    </div>
  </form>
</div>
